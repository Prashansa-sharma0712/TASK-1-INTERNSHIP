      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    h1 {
      margin-bottom: 20px;
      text-align: center;
    }

    .content {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    .carousel-section, .quiz-section {
      flex: 1;
      min-width: 300px;
    }

    .carousel {
      position: relative;
      overflow: hidden;
      border-radius: 15px;
      aspect-ratio: 16 / 9;
      background-color: #eee;
    }

    .carousel img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 15px;
      transition: opacity 1s ease-in-out;
      opacity: 0;
      position: absolute;
      top: 0;
