  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const faqBoxes = document.querySelectorAll('.faqbox');
      faqBoxes.forEach(box => {
        box.addEventListener('click', () => {
          const existingAnswer = box.querySelector('.faq-answer');
          if (existingAnswer) {
            existingAnswer.remove();
          } else {
            const p = document.createElement('p');
            p.classList.add('faq-answer');
            p.innerText = getAnswer(box.innerText.trim());
            box.appendChild(p);
          }
        });
      });

      document.getElementById('get-started').addEventListener('click', () => {
        const email = document.getElementById('email').value.trim();
        const pattern = /^[^ ]+@[^ ]+\.[a-z]{2,3}$/;
        if (!email) {
          alert("Please enter your email.");
        } else if (!pattern.test(email)) {
          alert("Please enter a valid email address.");
        } else {
          alert("Welcome to Netflix! Email accepted.");
        }
      });

      function getAnswer(q) {
        const map = {
          "What is NetFlix": "Netflix is a streaming service offering TV shows, movies, anime and more.",
          "How much does Netflix cost?": "Plans start at ₹149/month. No commitments, cancel anytime.",
          "What can I watch on Netflix?": "You can watch movies, TV shows, documentaries, and more.",
          "Where can I watch?": "Watch on mobile, tablet, laptop, or Smart TV anytime."
        };
        return map[q] || "This is a sample answer. Feel free to update it!";
      }
    });
  </script>
